@page
@model WolManagerApp.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WolData.Id" />
            <div class="form-group">
                <label asp-for="WolData.ComputerName" class="control-label"></label>
                <input asp-for="WolData.ComputerName" class="form-control" />
                <span asp-validation-for="WolData.ComputerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WolData.MACAddress" class="control-label"></label>
                <input asp-for="WolData.MACAddress" class="form-control" />
                <span asp-validation-for="WolData.MACAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Torna alla home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
